<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adi_h.ex1_adihay.MainActivity2">


    <TextView
        android:id="@+id/userNameText"
        android:layout_width="187dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/userAgeText"
        android:layout_width="187dp"
        android:layout_height="41dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userNameText"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/chooseLevelText"
        android:layout_width="354dp"
        android:layout_height="67dp"
        android:text="Which level do you want to play?"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userAgeText" />

    <Button
        android:id="@+id/buttonEasy"
        android:layout_width="145dp"
        android:layout_height="56dp"
        android:onClick="onClick"
        android:text="easy 2x2"
        app:layout_constraintTop_toBottomOf="@id/chooseLevelText"
        tools:layout_editor_absoluteX="108dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/buttonNormal"
        android:layout_width="146dp"
        android:layout_height="56dp"
        android:onClick="onClick"
        android:text="normal 4x4"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="291dp"
        app:layout_constraintTop_toBottomOf="@id/buttonEasy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/buttonHard"
        android:layout_width="145dp"
        android:layout_height="53dp"
        android:onClick="onClick"
        android:text="hard 6x6"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="375dp"
        app:layout_constraintTop_toBottomOf="@id/buttonNormal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>
