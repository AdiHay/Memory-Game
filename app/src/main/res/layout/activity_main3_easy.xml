<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adi_h.ex1_adihay.MainActivity3_game">

    <EditText
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="time"
        android:text="Timer"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/userNameText"
        android:layout_width="90dp"
        android:layout_height="41dp"
        android:layout_marginLeft="20dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@id/timerText"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/easyText"
        android:layout_width="116dp"
        android:layout_height="30dp"
        android:text="Easy"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timerText" />

    <ImageButton
        android:id="@+id/imageButton1.1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="52dp"
        android:onClick="gameLogic"
        android:scaleType="centerInside"
        android:tag="dog"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageButton1.2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/easyText"
        app:srcCompat="@drawable/star" />

    <ImageButton
        android:id="@+id/imageButton1.2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="52dp"
        android:onClick="gameLogic"
        android:scaleType="centerInside"
        android:tag="cat"
        app:layout_constraintLeft_toRightOf="@id/imageButton1.1"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/easyText"
        app:srcCompat="@drawable/star" />

    <ImageButton
        android:id="@+id/imageButton1.3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="gameLogic"
        android:scaleType="centerInside"
        android:tag="dog"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imageButton1.4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageButton1.1"
        app:srcCompat="@drawable/star" />

    <ImageButton
        android:id="@+id/imageButton1.4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="gameLogic"
        android:tag="cat"
        app:srcCompat="@drawable/star"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="296dp"
        app:layout_constraintTop_toBottomOf="@id/imageButton1.2"
        app:layout_constraintLeft_toRightOf="@id/imageButton1.3"
        app:layout_constraintRight_toLeftOf="parent"
        android:scaleType="centerInside"/>

</android.support.constraint.ConstraintLayout>
